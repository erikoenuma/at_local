<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-11 mx-auto">
            <div class="row mt-4 align-items-center">
              <div class="col-6"><h1><%= @areas.first.prefecture %>からエリアを選択</h1></div>
              <div class="col-3"><%= link_to t('helpers.links.back'), prefecture_path, class:"btn btn-primary text-white btn-sm my-5" %></div>
            </div>

            <div class="d-flex flex-wrap mx-5 my-3">
                <% @areas.each do |place| %>
                    <%# ransack %>
                    <%= search_form_for @q, url: shops_path do |f|%>
                        <%= f.hidden_field :place_id_eq, :value => place.id %>
                        <%= f.hidden_field :private_eq, :value => false %>
                        <%= f.submit "#{place.area}", class:"btn btn-outline-default mx-3 my-1" %>
                    <% end %>

                <% end %>
            </div>

        </div>
    </div>
</div>