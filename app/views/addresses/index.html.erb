<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center">

      <div class="d-flex align-items-center col-xl-9">
        <h1 class="my-4"><%= t('.title') %></h1>
        <%= link_to "追加", new_address_path, class:"btn btn-default btn-sm ms-5" %>
      </div>

      <div class="col-xl-9">

        <% if @addresses.length == 0 %>
            <p>登録されている配送先はありません</p>
        <% else %>

          <div class="container table-background">
            <table class="table table-hover">

              <thead class="thead-order">
                  <tr>
                      <th><%= Address.human_attribute_name :address %></th>
                      <th><%= Address.human_attribute_name :name %></th>
                      <th></th>
                  </tr>
              </thead>

              <tbody>
                <% @addresses.each do |address| %>
                  <tr>
                    <td>
                      <div class="d-flex">
                        <span>〒<%= address.zipcode %><span>
                        <span class="ms-2"><%= address.address %></span>
                        <span class="ms-2"><%= address.building_name %></span>
                      </div>
                    </td>
                    <td><%= address.name %></td>
                    <td>
                      <div class="d-flex">
                        <%= link_to t('helpers.links.edit'), edit_address_path(address), class:"btn btn-default btn-sm me-3" %>
                        <%= link_to t('helpers.links.destroy'), address_path(address), method: :delete, data: { confirm: t('common.confirm_destroy') }, class:"btn btn-outline-default btn-sm" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>
        <% end %>

        <%= link_to t('helpers.links.back'), user_path(current_user.id), class: "btn btn-outline-secondary mt-5"%>

      </div>
    </div>
  </div>
</section>
