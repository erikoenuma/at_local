<%= form_with(model: address, local: true) do |form| %>
  <%= render 'layouts/errors', object: address %>

  <%# 郵便番号 %>
  <div class="col-md-6">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode, class:"form-control mb-3", autofocus: true, autocomplete: "zipcode", required: true, maxlength: "8", minlength: "7"%>
  </div>

  <%# 住所 %>
  <div class="col-md-12">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control mb-3", autofocus: true, autocomplete: "address", required: true, maxlength: "255" %>
  </div>

  <%# 建物名・部屋番号 %>
  <div class="col-md-12">
    <%= form.label :building_name %>
    <%= form.text_field :building_name, class:"form-control mb-3", autofocus: true, autocomplete: "building_name", placeholder: "（任意）", maxlength: "255" %>
  </div>

  <%# 宛名 %>
  <div class="col-md-6">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control mb-3", autofocus: true, autocomplete: "name", maxlength: "30" %>
  </div>

  <div class="row justify-content-center my-4">
    <%= link_to t('helpers.links.back'), addresses_path, class: "btn btn-light text-black col-md-2 mx-2"%>
    <%= form.submit class: "btn btn-default col-md-2 mx-2" %>
  </div>
<% end %>