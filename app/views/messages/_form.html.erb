<%= form_with(model: message, url: messages_path(order), local: true) do |form| %>
  <%= render 'layouts/errors', object: message %>

  <%= form.hidden_field :sender, value: sender_string %>

  <div class="form-outline mb-3 d-flex">
    <%= form.text_field :comments, class:"form-control me-4", autofocus: true, autocomplete: "message", placeholder:"メッセージ", required: true, maxlength: "255" %>
    <%= form.submit "送信", class:"btn btn-default" %>
  </div>

<% end %>