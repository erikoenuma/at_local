<%# 利用者側の商品詳細画面 %>

<div class="row" style="height:45%">

    <div class="col-md-6">
        <img class="item-image" src=<%= rails_blob_path(item.image) if item.image.present? %>, class="item-image">
    </div>

    <div class="col-md-6">
        <h2 class="mb-5"><%= item.name %></h2>
        <p><%= item.description %></p>
        <div class="d-flex justify-content-end">
            <p class="fw-bold mt-5"><%= item.price %>円</p>
        </div>

        <%= form_with(model: item, url: carts_add_item_path(shop, item),method: :post, local: true) do |form| %>
            <div class="d-flex justify-content-end align-items-center">
                <input type="number" class="form-control w-25 me-3" name="counts" max=<%= item.counts %> min= "1" value="1">個
            </div>

            <div class="d-flex justify-content-end my-5">
                <%= link_to t('helpers.links.back'), top_shop_path(shop), class: "btn btn-light text-black mx-2"%>
                <%= form.submit t('helpers.links.add_cart'), class: "btn btn-default mx-2"%>
            </div>
        <% end %>

    </div>
</div>